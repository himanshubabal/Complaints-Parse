<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hostel Level Complaint Portal"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_hostel_comp_editText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="Title"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_hostel_comp_editText"
        android:layout_gravity="center_horizontal"
        android:hint="Description"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Complaint"
        android:id="@+id/hostel_comp_submit_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        style="@style/Base.Widget.AppCompat.ActionButton"/>
</LinearLayout><!-- From: file:/Users/himanshu_babal/Parse-Starter-Project-IITD-Complaints/ParseStarterProject/src/main/res/layout/post_hostel_comp.xml -->